<h1>We found <%= pluralize(@pieces.size, 'piece') %> for you to check out today: </h1>
<h3><%= link_to("Add a piece to your online gallery", new_piece_path) %></h3>
<% @pieces.each do |p| %>
  <h1><em><%= link_to(p.title, piece_path(p.id)) %></em></h1>
  <h3><em><%= p.medium %></em></h3>
  <p><em><%= p.description %></em></p>
  <p><em><%= p.size %></em></p>
  <p><em><%= number_to_currency(p.rental_price_per_day) %> per day / <%= number_to_currency(p.rental_price_per_week) %> per week / <%= number_to_currency(p.rental_price_per_month) %> per month</em></p>
  <p><em>Sale price: <%= number_to_currency(p.sale_price) %></p></em>
  <p><em>Status: <%= availability_status(p) %></em</p>
<% end %>
