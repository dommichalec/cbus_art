<h1>We have <%= pluralize(@pieces.size, 'piece') %> available for you today</h1>
<% @pieces.each do |p| %>
  <h1><%= p.title %></h1>
  <h3><em><%= p.medium %></em></h3>
  <p><em><%= p.description %></em></p>
  <p><em><%= p.size %></em></p>
  <p><em><%= number_to_currency(p.rental_price_per_day) %> per day / <%= number_to_currency(p.rental_price_per_week) %> per week / <%= number_to_currency(p.rental_price_per_month) %> per month</em></p>
  <p><em>Sale price: <%= p.sale_price %></p></em>
  <p><em>Status: <%= availability_status(p) %></em</p>
  <h4>Updated <%= time_ago_in_words(p.updated_at) %> ago</h4>
<% end %>
