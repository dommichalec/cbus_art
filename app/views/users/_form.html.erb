<%= form_for(@user) do |f| %>
  <%= render 'shared/errors', object: @user %>
  <h3><%= f.label :first_name %></h3>
  <%= f.text_field :first_name %><br>

  <h3><%= f.label :last_name %></h3>
  <%= f.text_field :last_name %><br>

  <h3><%= f.label :email %></h3>
  <%= f.text_field :email %><br>

  <h3><%= f.label :portfolio_url, "Portfolio Site" %></h3>
  <%= f.text_field :portfolio_url %><br>

  <h3><%= f.label :password %></h3>
  <%= f.password_field :password %><br>

  <h3><%= f.label :password_confirmation, "Confirm your password" %></h3>
  <%= f.password_field :password_confirmation %><br>

  <%= f.submit %>
<% end %>
