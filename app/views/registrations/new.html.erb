<h1>New registration for <%= @piece.title %></h1>
<%= form_for([@piece, @registration]) do |f| %>
<h3><%= f.label :name %></h3>
<%= f.text_field :name %><br>

<h3><%= f.label :email %></h3>
<%= f.text_field :email %><br>

<p><%= f.label :area_code %></p>
<%= f.number_field :area_code %><br>

<p><%= f.label :phone_number %></p>
<%= f.number_field :phone_number %><br>

<p><%= f.label :message %></p>
<%= f.text_area :message %><br>

<p><%= f.label :neighborhood, "Which neighborhood do you live in?" %></p>
<%= f.text_field :neighborhood, placeholder: "Short North, Worthington etc." %><br>

<p><%= f.label "Interested in renting this piece? " %><%= f.check_box :interested_in_rental %></p>
<p><%= f.label "Interested in purchasing this piece? " %>  <%= f.check_box :interested_in_purchase %></p>

<%= f.submit %>
<% end %>
